<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Concert Network!</h1>
             <p>View and post the best music concerts from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/concerts/new">Add New Concert</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% concerts.forEach(function(concert){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= concert.image %>">
                   <div class="caption">
                       <h4><%= concert.name %></h4>
                   </div>
                   <p>
                       <a href="/concerts/<%= concert._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
