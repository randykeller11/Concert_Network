<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%=concert.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/concerts/<%=concert._id%>?_method=PUT"  method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="concert[name]" value="<%=concert.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="concert[image]" value="<%=concert.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="concert[description]" value="<%=concert.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/concerts">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

